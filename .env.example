# AI Provider Configuration
AI_PROVIDER=openai  # Options: openai, anthropic, local
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Search Configuration
PERPLEXITY_API_KEY=your_perplexity_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

# Voice Configuration (Optional)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
USE_LOCAL_TTS=true  # Use pyttsx3 instead of ElevenLabs

# Memory & Database
CHROMA_PERSIST_DIR=./data/memory
CHROMA_COLLECTION_NAME=jarvis_memory
MAX_MEMORY_ITEMS=1000

# Web Dashboard
FLASK_SECRET_KEY=your_secret_key_here_change_in_production
WEB_HOST=0.0.0.0
WEB_PORT=5000
DEBUG_MODE=false

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=./data/logs/jarvis.log

# Features
ENABLE_VOICE=true
ENABLE_WEB_SEARCH=true
ENABLE_IMAGE_GEN=true
ENABLE_SCHEDULER=true

# Image Generation
IMAGE_MODEL=dall-e-3
IMAGE_SIZE=1024x1024
IMAGE_QUALITY=standard

# Scheduler
SCHEDULER_CHECK_INTERVAL=60  # seconds
TIMEZONE=UTC

# Security
MAX_TOKENS=4000
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600  # seconds

# Performance
CACHE_ENABLED=true
CACHE_TTL=3600  # seconds
MAX_CONCURRENT_REQUESTS=5

# User Preferences
USER_NAME=User
JARVIS_PERSONALITY=professional  # Options: professional, friendly, witty, formal
RESPONSE_STYLE=concise  # Options: concise, detailed, technical

# Notifications
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true

# Data Retention
CONVERSATION_RETENTION_DAYS=30
MEMORY_CLEANUP_ENABLED=true
MEMORY_CLEANUP_INTERVAL=86400  # seconds (24 hours)
